#include <iostream>
using namespace std;

int main() {
    int num; // Определение переменной целого типа
    cout << "Введите число: ";
    cin >> num; // Ввод числа с клавиатуры

    int mask = 1; // Инициализация маски единицей в младшем разряде (00000001 в двоичной системе)

    // Применение поразрядных операций
    int result = num | mask; // Установка младшего бита в 1

    // Вывод результата на монитор
    cout << "Результат: " << result << endl;

    return 0;
}
