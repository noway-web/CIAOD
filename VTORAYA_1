#include <iostream>
using namespace std;

int main() {
    // Определение переменной целого типа и присвоение начального значения 0x00 (00000000 в двоичной системе)
    int num = 0x00;

    // Создание маски для установки 1, 5 и 6 битов в 1
    int mask = (1 << 1) | (1 << 5) | (1 << 6);

    // Установка 1, 5 и 6 битов в 1 с использованием маски и операции "ИЛИ с присваиванием"
    num |= mask;

    // Вывод результата на монитор
    cout << "Результат: " << hex << num << endl; // Ожидаемый результат: 0x62
    return 0;
}
