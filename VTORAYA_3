#include <iostream>
using namespace std;

int main() {
    int num; // Определение переменной целого типа
    cout << "Введите число: ";
    cin >> num; // Ввод числа с клавиатуры

    // Умножение числа на 128 с использованием поразрядной операции
    num = num << 7; // Сдвиг влево на 7 битов (эквивалентно умножению на 128)

    // Вывод результата на монитор
    cout << "Результат умножения на 128: " << num << endl;

    return 0;
}
